<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
      <div class="box">
        <div class="panel panel-default shadow">
          <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
          <div class="panel-body">
            <%= pin.description %><br />
            <%= pin.created_at.strftime("%v") %><br />
            <br /><strong><%= pin.user.name if pin.user %></strong><br />
          </div>

          <div class="panel-footer">
            <% if pin.user == current_user %>
                <%= link_to 'Edit', edit_pin_path(pin) %><br/>
                <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
            <% end %>
          </div>

          </div>
      </div>
  <% end %>
</div>
<div class="text-center">
  <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>


